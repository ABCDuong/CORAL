{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": []
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "paths": {
    "@core/*": ["src/app/core/*"],
    "@modules/*": ["src/app/modules/*"],
    "@shared/*": ["src/app/shared/*"],
    "@app/*": ["src/app/*"]
  }
}
